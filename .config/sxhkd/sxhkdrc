# Basic
super + d
    dmenu_run
super + u
    udiskie-umount -a
super + x
    dmenu_promt "Shutdown?" "poweroff"

# Applications
super + Return
    $TERMINAL
super + shift + Return
    $TERMINAL -c dropdown
super + p
    $TERMINAL -c dropdown -e python
super + a
    $TERMINAL -c dropdown -e pulsemixer
super + s
    arandr
super + z
    $TERMINAL -c dropdown -e nmtui
super + m
    $TERMINAL -c dropdown -e htop
super + r
    $TERMINAL -e $FILE
super + w
    $BROWSER
super + y
    $TERMINAL -e neomutt
super + n
    $TERMINAL -c dropdown -e newsboat

# Screenshots
Print
    screenshot -s
shift + Print
    screenshot -a
alt + Print
    screenshot -w

# Gifs
super + i
    peek

# Emoji
super + e
    emoji

# System info
super + F1
    systeminfo

# Notifications
ctrl + space
    dunstctl close-all

# Volume
XF86AudioRaiseVolume
    pamixer -i 5
XF86AudioLowerVolume
    pamixer -d 5
XF86AudioMute
    pamixer -t
XF86AudioMicMute
    pamixer --default-source -t

# Brightness control
XF86MonBrightnessUp
    brillo -A 10 -u 200000
XF86MonBrightnessDown
    brillo -U 10 -u 200000
