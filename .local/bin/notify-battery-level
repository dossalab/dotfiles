#!/bin/sh

# Notify with notify-send if my battery is below 10%.
# You can set this to run via cron.

export DBUS_SESSION_BUS_ADDRESS="unix:path=/run/user/$(id -a)/bus"

[ "$(cat /sys/class/power_supply/BAT0/status)" = "Charging" ] && exit
[ "$(cat /sys/class/power_supply/BAT0/capacity)" -lt 10 ] &&
	notify-send -u critical "Battery critically low."

